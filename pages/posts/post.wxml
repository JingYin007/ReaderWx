<!--pages/posts/post.wxml-->
<!-- 引用模板文件 相对路径、绝对路径都可以 -->
<import src="post-item/post-item-template.wxml"/>
<view>
  <swiper class='swiper-top ' vertical='{{false}}' indicator-dots='true' autoplay='true' duration='800' interval='2000'>
    <swiper-item wx:for='{{swiperImg}}' wx:key='swiperImg'>
      <image src='{{item.img}}'></image>
    </swiper-item>
  </swiper>

  <view class='news-list'>
    <block wx:for="{{objData}}" wx:key='obData' wx:for-item='item'>
      <!-- //template-->
      <template is = 'postItem' data='{{item}}' />
    </block>
  </view>

</view>