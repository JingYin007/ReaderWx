/* pages/posts/post.wxss */

.swiper-top {
  width: 100%;
  height: 500rpx;
}

.swiper-top image {
  width: 100%;
  height: 500rpx;
}

.news-list {
  display: flex;
  align-items: center;
  flex-direction: column;
}

.news-item {
  margin: 0 0 30rpx 0;
  flex-direction: column;
  background-color: #fff;
  border-top: 1px solid #ededed;
  border-bottom: 1px solid  #ededed;
  padding-bottom: 5px;
}

.post-autor-data {
  margin: 10rpx 0 10rpx 0;
}

.post-autor-data .avatar {
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}

.post-autor-data .date {
  margin-left: 10px;
  vertical-align: middle;
  font-size: 23rpx;
}

.news-item .title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10px;
  margin-left: 10px;
}

.news-item .view-img {
  width: 100%;
  margin-left: 16rpx;
  height: 450rpx;
  margin: 2px 0;
}

.news-item .content {
  font-size: 28rpx;
  font-family: serif;
  color: #666;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;
}

.news-item .post-like {
  font-size: 13px;
  flex-direction: row;
  line-height: 16px;
  margin-left: 10px;
}

.news-item .post-like .icon {
  width: 20px;
  height: 20px;
  margin: 5px 0 5px 0;
  vertical-align: middle;
}

.news-item  .post-like .num {
  vertical-align: middle;
  font-size: 18rpx;
  line-height: 16rpx;
  margin-left: 5px;
  margin-right: 20rpx;
}
