/* pages/welcome/welcome.wxss */
page{
  height: 100%;
  background-color:#b3d4db;
}
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.user-avatar {
  width: 200rpx;
  height: 200rpx;
  margin-top: 100rpx;
  margin-bottom: 100rpx;
  border-radius: 50%;
  -webkit-border-radis: 50%;
  -moz-border-radis: 50%;
}

.user-name {
  font-size: 32rpx;
  font-family: 'Lucida Sans Unicode';
  font-weight: bold;
  margin-bottom: 20px;
}

.moto-container {
  border: 1px solid #405f80;
  width: 200rpx;
  height: 40px;
  border-radius: 5px;
  text-align: center;
  padding: 0 3px;
  line-height: 40px;
  font-size: 22rpx;
  font-weight: bold;
  color: #405f80;
}
